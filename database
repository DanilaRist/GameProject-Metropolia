CREATE DATABASE trivia_game;
USE trivia_game;
CREATE TABLE questions (
    id INT AUTO_INCREMENT PRIMARY KEY,
    name VARCHAR(255) NOT NULL,
    question TEXT NOT NULL,
    options TEXT NOT NULL,
    answer CHAR(1) NOT NULL,
    attack INT NOT NULL
);
